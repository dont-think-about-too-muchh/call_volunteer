{
  "compilerOptions": {
    "strict": true,
    "module": "ES6",
    "esModuleInterop": true,
    "target": "es2019",
    "moduleResolution": "node",
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ES2021",
      "ESNext"
    ],
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["jest", "node"],
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "ts-node": {
    "files": true
  }
}
